{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "target": "es5",
    "sourceMap": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedParameters": false,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
