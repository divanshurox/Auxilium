{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "extends": ["prettier", "prettier/@typescript-eslint"],
  "rules": {
    "comma-dangle": "off",
    "indent": 0,
    "no-tabs": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "useTabs": true,
        "tabWidth": 2,
        "semi": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "endOfLine": "lf"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts"]
      }
    }
  }
}
